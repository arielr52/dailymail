- var arr1=['gluing', 'puzzies', 'running', 'running', 'speech', 'communication', 'coloring', ' building', 'jumping','takingTurns', ' paiting', 'dramaticPlay'];
- var arr2= ['throwCatch','sittingWithTheGroup','cuttingWithScissors','Manipulatives','climbing','painting']
- var arr= arr1.concat(arr2)
- var today = new Date().toDateString() 

h2 My Day At School...
table
 tr
  td Name:  
  td 
     select(name='selectedKidName') 
      each kid in kids
       option(value=kid.name) #{kid.name}
  td Date:
  td #{today}
Things I worked on Today:
- for (var i=0; i<arr.length; i++)   
   input(type='checkbox',name=arr[i])
   spawn  #{arr[i]} 
p Other:
input(type="textArea" ,name='other')
p Books We've Read
input(type="textArea" ,name='books')
p Nap Time
 table
 tr
  td From:  
  td 
   input(type="textArea" ,name='from')    
  td To:  
  td 
   input(type="textArea" ,name='to')

p Meals, I ate:
 select(name='meals') 
  option(value='All') All
  option(value='Some') Some
  option(value='None') None
p Meals, note
 input(type="textArea" ,name='mealNote')          
p Special Activity:
input(type="textArea" ,name='Special Activity')        